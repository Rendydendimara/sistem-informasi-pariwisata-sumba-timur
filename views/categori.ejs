<% layout('layouts/boilerplate') -%>
<main style="min-height: 100vh" class="p-5">
  <h2 class="mb-4 border-bottom">Categori</h2>
  <h4><%= categori %></h4>
  <div>
    <%listWisata.forEach((wisata) => { %>
    <div class="card mb-3 shadow" style="margin: 70px 0">
      <img
        src="<%= wisata.image[0] %>"
        class="card-img-top"
        alt="<%= wisata.nama_wisata %>"
        height="400px"
        style="object-fit: cover; object-position: center"
      />
      <div class="card-body">
        <h5 class="card-title"><%= wisata.nama_wisata %></h5>
        <p class="card-text"><%= wisata.deskripsi %></p>
        <p>
          <a
            style="text-decoration: unset"
            class="badge text-bg-primary"
            href="/kategori?type=<%= wisata.nama_kategori %>"
          >
            <small><%= wisata.nama_kategori %></small></a
          >
        </p>
        <a href="/wisata/detail/<%= wisata.id_wisata %>" class="btn btn-success"
          >Lihat Detail</a
        >
      </div>
    </div>
    <% }) %>
  </div>
</main>
